<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Clothes and Wardrobe Assistant</title>
    <link rel="stylesheet" href="/css/mainmenustyles.css">
    <script src="https://kit.fontawesome.com/b88884180e.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav>
            <ul>
                <li class="active"><a href="/users/wardrobe">Wardrobe Gallery</a></li>
                <li><a href="/users/outfitgenerator">Outfit Generator</a></li>
                <li><a href="/users/logout">Log out</a></li>
                <p class="title">Hello <%= user %>!</p> 
            </ul>
        </nav>
    </header>
                
    <main>
        <h1>Your Wardrobe</h1>

        <section>
            <h2>T-shirts</h2>
            <button class="add-btn" data-category="tshirts" type="button">
                <i class="fa-solid fa-plus fa-2xl"></i>
            </button>
            <% tshirts.forEach(function(img){ %>
                <figure class="gallery"><img src="<%= img %>" alt="T-shirt"></figure>
            <% }); %>
        </section>

        <section>
            <h2>Jackets</h2>
            <button class="add-btn" data-category="jackets" type="button">
                <i class="fa-solid fa-plus fa-2xl"></i>
            </button>
            <% jackets.forEach(function(img){ %>
                <figure class="gallery"><img src="<%= img %>" alt="Jacket"></figure>
            <% }); %>
        </section>

        <section>
            <h2>Trousers</h2>
            <button class="add-btn" data-category="trousers" type="button">
                <i class="fa-solid fa-plus fa-2xl"></i>
            </button>
            <% trousers.forEach(function(img){ %>
                <figure class="gallery"><img src="<%= img %>" alt="Trousers"></figure>
            <% }); %>
        </section>

        <section>
            <h2>Shoes</h2>
            <button class="add-btn" data-category="shoes" type="button">
                <i class="fa-solid fa-plus fa-2xl"></i>
            </button>
            <% shoes.forEach(function(img){ %>
                <figure class="gallery"><img src="<%= img %>" alt="Shoes"></figure>
            <% }); %>
        </section>

        <form id="uploadForm" action="/users/upload" method="POST" enctype="multipart/form-data" style="display:none;">
            <input type="file" name="image" id="fileInput" accept="image/*">
            <input type="hidden" name="category" id="categoryInput">
        </form>
    </main>

    <script src="/js/imageInput.js"></script>
</body>
</html>